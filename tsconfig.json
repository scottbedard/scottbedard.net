{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "paths": {
      "@/*": [
        "themes/scottbedard/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "themes/scottbedard/src/**/*.ts",
    "themes/scottbedard/src/**/*.tsx",
    "themes/scottbedard/src/**/*.vue",
    "themes/scottbedard/tests/**/*.ts",
    "themes/scottbedard/tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
